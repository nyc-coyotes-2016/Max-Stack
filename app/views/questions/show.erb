<div class="container">
  <h1><%= @question.title %></h1>

  <p><%= @question.body %></p>

  <a href="/questions/<%= @question.id %>/answers/new">Answer this question</a>

  <% if @answers %>
    <ul>
      <% @answers.each do |answer| %>
        <li><%= answer.text %> -- <%= answer.answer_author %> <a href="/questions/<%= @question.id %>/answers/<%= answer.id %>/edit">edit</a></li>
      <% end %>
    </ul>
  <% else %>
    <p>No one has answered this questions.... Maybe you should <a href="/questions/<%= @question.id %>/answers/new">answer this question!</a></p>
  <% end %>
</div>
